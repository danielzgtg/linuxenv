#!/bin/bash
set -e

# https://trac.ffmpeg.org/wiki/How%20to%20speed%20up%20/%20slow%20down%20a%20video

usage() {
    echo 'Usage: videofast video.mp4'
    exit 1
}

if [ "$#" -ne 1 ]; then
    echo 'Wrong number of arguments'
    usage
fi

if [[ ! "$1" =~ .+\..+ ]]; then
    echo 'No file extension'
    usage
fi

if [ ! -f "$1" ]; then
    echo 'File missing'
    usage
fi

base="${1%.*}";
ext="${1##*.}";

ffmpeg -i "$1" -r 60 -filter_complex "[0:v]setpts=0.5*PTS[v];[0:a]atempo=2.0[a]" -map "[v]" -map "[a]" "$base"'.fast.'"$ext"
