#!/bin/bash
set -e
if [ "$#" -ne 1 ]; then
  echo 'Usage: wavandcaption input.mp4'
  exit 1
fi
if [ ! -f "$1" ]; then
  echo 'Input file missing'
  exit 1
fi
OUT="$1"'.wav'
if [ -e "$OUT" ]; then
  echo 'Temporary file already exists. Just use the caption command instead'
  exit 1
fi
ffmpeg -i "$1" "$OUT"
caption "$OUT"
unlink "$OUT"
