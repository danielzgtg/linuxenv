## Workaround to match specific PPAs from ppa.launchpadcontent.net
Package: *
Pin: origin /^[^gp]|^g[^p]|^gp[^l]|^gpl[^\.]|^gpl\.[^s]|^gpl\.s[^a]|^gpl\.sa[^v]|^gpl\.sav[^o]|^gpl\.savo[^i]|^gpl\.savoi[^r]|^gpl\.savoir[^f]|^gpl\.savoirf[^a]|^gpl\.savoirfa[^i]|^gpl\.savoirfai[^r]|^gpl\.savoirfair[^e]|^gpl\.savoirfaire[^l]|^gpl\.savoirfairel[^i]|^gpl\.savoirfaireli[^n]|^gpl\.savoirfairelin[^u]|^gpl\.savoirfairelinu[^x]|^gpl\.savoirfairelinux[^\.]|^gpl\.savoirfairelinux\.[^n]|^gpl\.savoirfairelinux\.n[^e]|^gpl\.savoirfairelinux\.ne[^t]|^p[^p]|^pp[^a]|^ppa[^\.]|^ppa\.[^l]|^ppa\.l[^a]|^ppa\.la[^u]|^ppa\.lau[^n]|^ppa\.laun[^c]|^ppa\.launc[^h]|^ppa\.launch[^p]|^ppa\.launchp[^a]|^ppa\.launchpa[^d]|^ppa\.launchpad[^c]|^ppa\.launchpadc[^o]|^ppa\.launchpadco[^n]|^ppa\.launchpadcon[^t]|^ppa\.launchpadcont[^e]|^ppa\.launchpadconte[^n]|^ppa\.launchpadconten[^t]|^ppa\.launchpadcontent[^\.]|^ppa\.launchpadcontent\.[^n]|^ppa\.launchpadcontent\.n[^e]|^ppa\.launchpadcontent\.ne[^t]/
Pin-Priority: -1


## Well-contained PPA allowlist
Package: apt-fast
Pin: release o=LP-PPA-apt-fast-stable
Pin-Priority: 1000

Package: apt-fast:any
Pin: origin *
Pin-Priority: -1


## Ill-contained PPA allowlist
Package: *
Pin: release o=LP-PPA-kisak-kisak-mesa
Pin-Priority: 500


Package: *
Pin: release o=LP-PPA-kubuntu-ppa-backports
Pin-Priority: 500


## Rudimentary defense against viruses modifying /etc/apt/sources.list.d
Package: *
Pin: origin /^[^g]|^g[^p]|^gp[^l]|^gpl[^\.]|^gpl\.[^s]|^gpl\.s[^a]|^gpl\.sa[^v]|^gpl\.sav[^o]|^gpl\.savo[^i]|^gpl\.savoi[^r]|^gpl\.savoir[^f]|^gpl\.savoirf[^a]|^gpl\.savoirfa[^i]|^gpl\.savoirfai[^r]|^gpl\.savoirfair[^e]|^gpl\.savoirfaire[^l]|^gpl\.savoirfairel[^i]|^gpl\.savoirfaireli[^n]|^gpl\.savoirfairelin[^u]|^gpl\.savoirfairelinu[^x]|^gpl\.savoirfairelinux[^\.]|^gpl\.savoirfairelinux\.[^n]|^gpl\.savoirfairelinux\.n[^e]|^gpl\.savoirfairelinux\.ne[^t]/
Pin-Priority: -1
